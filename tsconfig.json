{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
        "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"removeComments": false,
		"outDir": "./dist",
		"esModuleInterop": true,
        "lib": [
            "dom",
            "esnext"
        ],
		"module": "NodeNext",
        "moduleResolution": "NodeNext",
		"target": "ESNext"
	},
	"include": [
        "./types/**/*",
        "./data/**/*",
        "./csv/**/*",
		"./transform/**/*",
        "./decorator/**/*"
    ],
	"exclude": [
        "**/*.test.ts",
		"node_modules"
	]
}
